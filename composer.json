{
    "name": "thruster/actions-bundle",
    "type": "symfony-bundle",
    "description": "Thruster Actions Bundle",
    "keywords": ["symfony", "bundle", "actions", "thruster"],
    "homepage": "https://thruster.io",
    "license": "MIT",
    "authors": [
        {
            "name": "Aurimas Niekis",
            "email": "aurimas@niekis.lt"
        }
    ],
    "require": {
        "php": ">=7.0",
        "thruster/actions": "~1.0",
        "symfony/http-kernel": ">= 2.5",
        "symfony/dependency-injection": ">= 2.5"
    },
    "require-dev": {
        "phpunit/phpunit": "~5.0"
    },
    "autoload": {
        "psr-4": { "Thruster\\Bundle\\ActionsBundle\\": "src" }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-ci": "vendor/bin/phpunit -c phpunit.xml.ci"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
